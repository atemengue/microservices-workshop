{
    "openapi": "3.0.0",
    "info": {
        "title": "Pricing Service API",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/pricing/calculate": {
            "post": {
                "summary": "Calculates the price of an order",
                "operationId": "957a81191f8a067b8181ed000fa5326d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "productId": {
                                                    "type": "string"
                                                },
                                                "quantity": {
                                                    "type": "integer"
                                                },
                                                "price": {
                                                    "type": "number"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "customerId": {
                                        "type": "string"
                                    },
                                    "promotionCode": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "totalPrice": {
                                            "type": "number"
                                        },
                                        "discount": {
                                            "type": "number"
                                        },
                                        "finalPrice": {
                                            "type": "number"
                                        },
                                        "promotionCode": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Server Error"
                    }
                }
            }
        }
    }
}